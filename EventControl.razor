        }
    </div>

    <div class="flex w-full flex-col justify-center">
        <label class="font-bold dark:text-zinc-300">@Event.Nombre</label>


        @if (Event.IsAllDay)
        {
            <label class="text-sm dark:text-zinc-400">@Event.DateStart.ToString("dd") de @Event.DateStart.ToString("MMMM") todo el dia</label>
        }
        else
        {


            @if (Event.DateStart == Event.EndStart || Event.EndStart == default || Event.EndStart <= Event.DateStart)
            {
                <label class="text-sm dark:text-zinc-400">@Event.DateStart.ToString("dd") de @Event.DateStart.ToString("MMMM") a las @Event.DateStart.ToString("HH:mm")</label>
            }
            else
            {

                var dif = Event.EndStart - Event.DateStart;

                <label class="text-sm dark:text-zinc-400">@Event.DateStart.ToString("dd") de @Event.DateStart.ToString("MMMM") a las @Event.DateStart.ToString("HH:mm") durante @dif.TotalMinutes minutos</label>
            }
        }
    </div>

</div>

